<?xml version="1.0"?>
<block>
  <name>equisat_submitter</name>
  <key>equisat_decoder_equisat_submitter</key>
  <category>[equisat_decoder]</category>
  <import>import equisat_decoder</import>
  <make>equisat_decoder.equisat_submitter($station_name, $api_key)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Station name</name>
    <key>station_name</key>
    <type>string</type>
  </param>

  <param>
    <name>API Key</name>
    <key>api_key</key>
    <type>string</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>raw</name>
    <type>message</type>
  </sink>

  <sink>
    <name>corrected</name>
    <type>message</type>
  </sink>

</block>
